# Environment Variables for Voice Bot Application

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/
DB_NAME=voicebot_db

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Dhenu AI Configuration
DHENU_API_KEY=your_dhenu_api_key_here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Audio Configuration
AUDIO_UPLOAD_FOLDER=temp_audio
MAX_AUDIO_SIZE=16777216  # 16MB

# TTS Configuration
TTS_LANGUAGE=en  # Default TTS language

# Application Configuration
DEBUG=True
HOST=0.0.0.0
PORT=5000